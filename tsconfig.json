{
  "compilerOptions": {
    "target": "ES2019",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "types": ["node", "@wdio/types", "@wdio/mocha-framework"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}